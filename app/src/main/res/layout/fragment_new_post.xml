<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView for album cover -->
    <ImageView
        android:id="@+id/ivAlbumCover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_album_placeholder"
        android:contentDescription="album_cover" />

    <!-- AutoCompleteTextView for song -->
    <AutoCompleteTextView
        android:id="@+id/actvSongSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="search song"
        android:inputType="text" />

    <!-- Text input bar for post content -->
    <EditText
        android:id="@+id/etPostContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="post content"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minLines="4"
        android:maxLines="6" />

    <!-- Button to submit the post -->
    <Button
        android:id="@+id/btnSubmitPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="post" />

</LinearLayout>
