<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTintMode="screen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Vertical container for avatar and rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <!-- Song Album -->
            <ImageView
                android:id="@+id/songAlbumIV"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_avatar_placeholder" />

        </LinearLayout>

        <!-- Vertical container for user ID and post content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- User ID TextView above the post content -->
            <TextView
                android:id="@+id/trackTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="@color/olive_green"
                android:layout_marginBottom="8dp" />

            <!-- Post content TextView -->
            <TextView
                android:id="@+id/artistNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/olive_green"
                android:text="Artist" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
