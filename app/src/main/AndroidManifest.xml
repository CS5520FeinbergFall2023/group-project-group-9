<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- need to implement redirect URI for Spotify API -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.STAGE"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.profile.EditProfile"
            android:exported="false">
        </activity>
        <activity
            android:name=".UI.profile.TagsAdapter"
            android:exported="false">
        </activity>
        <activity
            android:name=".UI.profile.ProfileFragment"
            android:exported="false">
        </activity>
        <activity
            android:name=".UI.profile.RecentListenedAdapter"
            android:exported="false">
        </activity>
        <activity
            android:name=".UI.profile.ProfileViewModel"
            android:exported="false">
        </activity>

        <activity
            android:name=".API.FirebaseExample"
            android:exported="false">
        </activity>
        <activity
            android:name=".API.SpotifyAPIExample"
            android:exported="true">
        </activity>
        <activity
            android:name=".API.ResetPWDialogFragment"
            android:exported="false" />
        <activity
            android:name=".API.Register"
            android:exported="false" />
        <activity
            android:name=".API.Login"
            android:exported="false" />
        <activity
            android:name=".API.LoginRegisterExample"
            android:exported="false" />
    </application>

</manifest>