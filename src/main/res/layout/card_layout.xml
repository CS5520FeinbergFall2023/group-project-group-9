<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
app:cardCornerRadius="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- User avatar on the left -->
    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/default_pfp"  />

    <!-- Vertical container for texts and like image -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Placeholder for music link -->
        <TextView
            android:id="@+id/tvMusicLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music link placeholder"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- Post content below the music link placeholder -->
        <TextView
            android:id="@+id/tvPostContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post content placeholder"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:src="@drawable/profile_card_like" />

    <ImageView
        android:id="@+id/visibleState"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/profile_public"
        android:layout_marginLeft="16dp" />
</LinearLayout>

</androidx.cardview.widget.CardView>